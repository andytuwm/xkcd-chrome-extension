{
  "manifest_version": 2,
  "author": "Andy Tu",
  "name": "xkcd - comics viewer",
  "short_name": "xkcd-view",
  "description": "View XKCD comics from any page.",

  "version": "1.0.0",

  "icons": {
      "128": "assets/xkcd_128.png",
      "48": "assets/xkcd_48.png"
   },

  "browser_action": {
    "default_icon": "assets/xkcd_128.png",
    "default_popup": "xkcd.html"
  },

  "permissions": [
    "http://xkcd.com/"]

}